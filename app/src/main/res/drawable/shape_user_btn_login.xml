<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <gradient android:angle="315" android:endColor="@color/green_pressed" android:startColor="@color/green_normal" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="20dp" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <!--<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />-->

        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <gradient android:angle="315" android:endColor="@color/green_normal" android:startColor="@color/green_pressed" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="12dp" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <!--<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />-->
        </shape>
    </item>
</selector>


